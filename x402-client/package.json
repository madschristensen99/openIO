{
    "name": "@swader/x402-cli",
    "version": "0.1.6",
    "author": "https://github.com/swader",
    "description": "CLI tester for X402 endpoints",
    "repository": {
        "type": "git",
        "url": "https://github.com/Swader/x402-cli"
    },
    "type": "module",
    "bin": {
        "x402": "dist/cli.js"
    },
    "files": [
        "dist/cli.js",
        "README.md"
    ],
    "scripts": {
        "build": "mkdir -p dist && bun build src/cli.ts --outfile dist/cli.js --target bun --minify && chmod +x dist/cli.js",
        "prepublishOnly": "bun install && bun run build",
        "pack:test": "npm pack --dry-run",
        "type-check": "tsc --noEmit"
    },
    "bundledDependencies": [],
    "devDependencies": {
        "bun-types": "^1.3.1",
        "dotenv": "^17.2.3",
        "typescript": "^5.9.3",
        "viem": "^2.38.6",
        "x402-fetch": "^0.7.0"
    }
}